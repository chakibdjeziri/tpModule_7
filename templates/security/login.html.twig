{% extends 'base.html.twig' %}

{% block title %}Connexion Admin - MalikAuto
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div style="height: 50px"></div>
				<h1 class="mb-4">Connexion Admin</h1>
				{% for message in app.flashes('success') %}
					<div class="alert alert-success mt-4">
						{{ message }}
					</div>
				{% endfor %}
				{% if error %}
					<div class="alert alert-danger mt-4">
						{{ error.messageKey|trans(error.messageData, 'security') }}
					</div>
				{% endif %}
				<div style="height: 25px"></div>
				<form action="{{ path('security.login') }}" method="post" name="login">
					<div class="mb-3">
						<label for="username" class="form-label mt-4">Email</label>
						<input type="email" id="username" name="_username" class="form-control" placeholder="exemple@malikauto.fr" value="{{ last_username }}" required autofocus>
						<small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre e-mail avec quelqu'un d'autre.</small>
					</div>
					<div class="mb-3">
						<label for="password" class="form-label">Mot de passe</label>
						<input type="password" id="password" name="_password" class="form-control" placeholder="********" required>
					</div>
					<div class="mb-3 form-check">
						<input type="checkbox" id="remember_me" name="_remember_me" class="form-check-input">
						<label for="remember_me" class="form-check-label">Se souvenir de moi</label>
					</div>
					<button type="submit" class="btn btn-primary m-3">Connexion</button>
				</form>
			</div>
		</div>
		<div style="height: 150px"></div>
	</div>
{% endblock %}
