{% extends "base.html.twig" %}

{% block title %}MalikAuto - Modification du véhicule
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex m-4 justify-content-end">
			<a href="{{ path('app_admin') }}" class="btn btn-primary">
				Retour
			</a>
		</div>
		<h1 class="mt-4 text-center">Modification du véhicule</h1>
		<form name="vehicule" method="post">

			<div class="form-group">
				{{ form_label(form.nom) }}
				{{ form_widget(form.nom) }}
				<div class="form-error">
					{{ form_errors(form.nom) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.modele) }}
				{{ form_widget(form.modele) }}
				<div class="form-error">
					{{ form_errors(form.modele) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.description) }}
				{{ form_widget(form.description) }}
				<div class="form-error">
					{{ form_errors(form.description) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.image) }}
				{{ form_widget(form.image) }}
				<div class="form-error">
					{{ form_errors(form.image) }}
				</div>
			</div>
			{{ form_row(form._token) }}
			<button type="submit" id="vehicule_submit" name="vehicule[submit]" class="btn btn-primary m-4 ">Modifier mon véhicule</button>
		</div>

	</form>
</div>{% endblock %}
