{% extends 'base.html.twig' %}

{% block title %}symRecipe - Accueil
{% endblock %}

{% block body %}
	<div class="container mt-4">
		{% if not vehicules.items is same as([]) %}
			<div class="jumbotron text-center">
				<h1 class="display-4 p-2">Bienvenue sur MalikAuto</h1>
				<h3 class="lead">Votre Destination Automobile en Ligne</h3>
				<div class="d-flex justify-content-between">
					<div class="count text-start d-flex align-items-center">
						Il y a
						{{ vehicules.getTotalItemCount }}
						véhicules au total.
					</div>
					<div class="navigation mt-3 ml-auto">
						{{ knp_pagination_render(vehicules) }}
					</div>
				</div>
				<tbody>
					<div class="row row-cols-1 row-cols-md-3 g-4">
						{% for vehicule in vehicules %}
							<div class="col">
								<div class="card h-100">
									<div class="card-header">
										{% if vehicule.enVente %}
											<h5 class="text-success">En vente</h5>
										{% else %}
											<h5 class="text-danger">Vendu</h5>
										{% endif %}
									</div>
									<img src="{{ vehicule.image }}" class="card-img-top" alt="Image du véhicule">
									<div class="card-body">
										<h5 class="card-title">{{ vehicule.nom }}
										</h5>
										<h5 class="card-title">{{ vehicule.modele }}
										</h5>
										<p class="card-text">{{ vehicule.description }}</p>
									</div>
									<div class="card-footer">
										<h5 class="card-title">Publier le :
											{{ vehicule.dateCreation|date('d/m/Y') }}
										</h5>

									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</tbody>
			</table>
			<div class="d-flex justify-content-between">
				<div class="count text-start d-flex align-items-center">
					Il y a
					{{ vehicules.getTotalItemCount }}
					véhicules au total.
				</div>
				<div class="navigation mt-3 ml-auto">
					{{ knp_pagination_render(vehicules) }}
				</div>
			</div>
		{% else %}
			<h4>Il n'y a pas d'véhicule</h4>
		{% endif %}
	</div>
{% endblock %}
